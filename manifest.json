{
  "manifest_version": 3,
  "name": "Prompt Inserter",
  "version": "1.0",
  "description": "Uma extensão para inserir automaticamente um prompt em uma página específica.",
  "permissions": ["activeTab", "scripting", "downloads"],
  "host_permissions": ["https://glif.app/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://glif.app/*"],
      "js": ["content.js"]
    }
  ]
}
